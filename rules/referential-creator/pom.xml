<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.opens</groupId>
        <artifactId>rules</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <groupId>org.opens</groupId>
    <artifactId>referential-creator</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>referential-creator</name>
    <url>http://maven.apache.org</url>
    <!-- Here is what you need to set-uo before launching generation-->
    <properties>
        <generator.referentielName>Referential Name</generator.referentielName>
        <generator.referentiel>referentialname1.0</generator.referentiel>
        <generator.groupId>org.example</generator.groupId>
        <generator.baseFolder>/home/$user/Documents</generator.baseFolder>
        <generator.dataFile>/home/$user/datafile.csv</generator.dataFile>
        <!--<generator.delimiter>Ã¸</generator.delimiter>-->
        <generator.refdescriptor>http://www.example.com/refential-descriptor.html</generator.refdescriptor>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>${basedir}/src/main/resources/scripts/generate-project.sh</executable>
                    <workingDirectory>${generator.baseFolder}/</workingDirectory>
                    <arguments>
                        <argument>${generator.groupId}</argument>
                        <argument>${generator.baseFolder}</argument>
                        <argument>${generator.referentiel}</argument>
                        <argument>${generator.referentiel}-testcases</argument>
                        <argument>${generator.referentiel}-i18n</argument>
                        <argument>${generator.referentiel}-all-resources</argument>
                        <argument>${generator.referentiel}-resources</argument>
                    </arguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.opens</groupId>
                <artifactId>referential-creator-maven-plugin</artifactId>
                <version>1.0.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>generate</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <destinationFolder>${generator.baseFolder}/tanaguru-${generator.referentiel}/${generator.referentiel}</destinationFolder>
                    <parentFolder>${generator.baseFolder}/tanaguru-${generator.referentiel}</parentFolder>
                    <dataFile>${generator.dataFile}</dataFile>
                    <delimiter>${generator.delimiter}</delimiter>
                    <packageName>${generator.groupId}.tanaguru.rules</packageName>
                    <referentiel>${generator.referentiel}</referentiel>
                    <referentielLabel>${generator.referentielName}</referentielLabel>
                    <refDescriptor>${generator.refdescriptor}</refDescriptor>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
