<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="ruleImplementationLoaderComponent" class="org.opens.tanaguru.ruleimplementationloader.RuleImplementationLoaderImpl">
        <property name="archiveRoot" value="${ruleArchiveRoot}"/>
    </bean>
    <bean id="ruleImplementationLoaderService" class="org.opens.tanaguru.service.RuleImplementationLoaderServiceImpl">
        <property name="ruleImplementationLoader" ref="ruleImplementationLoaderComponent"/>
        <property name="definiteResultFactory" ref="definiteResultFactory"/>
        <property name="indefiniteResultFactory" ref="indefiniteResultFactory"/>
        <property name="nomenclatureLoaderService" ref="nomenclatureLoaderService"/>
        <property name="processRemarkFactory" ref="processRemarkFactory"/>
        <property name="sourceCodeRemarkFactory" ref="sourceCodeRemarkFactory"/>
    </bean>

</beans>
