<?xml version="1.0"?>
<project xmlns:pom="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.opens</groupId>
    <artifactId>tanaguru-resources</artifactId>
    <name>tanaguru-resources</name>
    <version>1.0-SNAPSHOT</version>
    <url>http://www.tanaguru.org</url>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources/</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>**/sql/*</exclude>
                    <exclude>**/scripts/*</exclude>
                    <exclude>**/lib/*</exclude>
                    <exclude>**/tanaguru-test-conf/*</exclude>
                    <exclude>**/conf/context/local-app/*</exclude>
                    <exclude>**/conf/context/ws/*</exclude>
                    <exclude>**/conf/context/crawler/*</exclude>
                    <exclude>**/conf/tanaguru.conf</exclude>
                    <exclude>**/conf/persistence.xml</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>