<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="domHandlerComponent" class="org.opens.tanaguru.processor.DOMHandlerImpl">
        <property name="processRemarkFactory" ref="processRemarkFactory"/>
        <property name="sourceCodeRemarkFactory" ref="sourceCodeRemarkFactory"/>
    </bean>
    <bean id="cssHandlerComponent" class="org.opens.tanaguru.processor.CSSHandlerImpl">
        <property name="processRemarkFactory" ref="processRemarkFactory"/>
        <property name="sourceCodeRemarkFactory" ref="sourceCodeRemarkFactory"/>
    </bean>
<!--
    <bean id="jsHandlerComponent" class="org.opens.tanaguru.processor.JSHandlerImpl">
        <property name="processRemarkFactory" ref="processRemarkFactory"/>
        <property name="sourceCodeRemarkFactory" ref="sourceCodeRemarkFactory"/>
    </bean>
-->
    <bean id="sspHandlerComponent" class="org.opens.tanaguru.processor.SSPHandlerImpl">
        <property name="DOMHandler" ref="domHandlerComponent"/>
        <property name="CSSHandler" ref="cssHandlerComponent"/>
<!--        <property name="JSHandler" ref="jsHandlerComponent"/>-->
        <property name="nomenclatureLoaderService" ref="nomenclatureLoaderService"/>
        <property name="processRemarkFactory" ref="processRemarkFactory"/>
    </bean>
    <bean id="processorComponent" class="org.opens.tanaguru.processor.ProcessorImpl">
        <property name="SSPHandler" ref="sspHandlerComponent"/>
    </bean>
    <bean id="processorService" class="org.opens.tanaguru.service.ProcessorServiceImpl">
        <property name="processor" ref="processorComponent"/>
        <property name="ruleImplementationLoaderService" ref="ruleImplementationLoaderService"/>
    </bean>

    <bean id="imageChecker" class="org.opens.tanaguru.ruleimplementation.ImageChecker" factory-method="getInstance">
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject"><ref local="imageChecker"/></property>
        <property name="targetMethod"><value>setUrlIdentifier</value></property>
        <property name="arguments">
            <list>
                <ref bean="urlIdentifierComponent"/>
            </list>
        </property>
    </bean>

</beans>
