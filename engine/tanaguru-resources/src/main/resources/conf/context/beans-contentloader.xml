<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="contentLoaderFactory" class="org.opens.tanaguru.contentloader.FileContentLoaderFactoryImpl">
        <property name="contentDataService" ref="contentDataService"/>
    </bean>

    <bean id="contentLoaderService" class="org.opens.tanaguru.service.ContentLoaderServiceImpl">
        <property name="contentFactory" ref="contentFactory"/>
        <property name="contentLoaderFactory" ref="contentLoaderFactory"/>
    </bean>

</beans>
