<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/security
      http://www.springframework.org/schema/security/spring-security-3.0.xsd">

    <http auto-config="true" access-denied-page="/access-denied.html">
<!--        <intercept-url pattern="/*.html*" requires-channel="https"/>-->
        <intercept-url pattern="/login*" filters="none"/>
        <intercept-url pattern="/home*" access="ROLE_USER"/>
        <intercept-url pattern="/home/contract*" access="ROLE_USER"/>
        <intercept-url pattern="/home/contract/*" access="ROLE_USER"/>
        <intercept-url pattern="/home/contract/audit*" access="ROLE_USER"/>
        <intercept-url pattern="/home/contract/page*" access="ROLE_USER"/>
        <intercept-url pattern="/audit-form*" access="ROLE_GUEST"/>
        <intercept-url pattern="/audit-result*" access="ROLE_GUEST"/>
        <form-login login-page="/login.html" authentication-failure-url="/login.html?error=errorOnLogin" default-target-url="/dispatch.html"/>
        <session-management invalid-session-url="/login.html?error=sessionTimeout" >
            <concurrency-control max-sessions="200" error-if-maximum-exceeded="true"  />
        </session-management>
    </http>

    <global-method-security secured-annotations="enabled"
            access-decision-manager-ref="accessDecisionManager"/>

    <authentication-manager>
        <authentication-provider>
            <password-encoder hash="md5"/>
            <jdbc-user-service data-source-ref="dataSource"
                users-by-username-query=
                    "SELECT Email1, Password, Activated as enabled
                    FROM TGSI_USER
                    WHERE Email1=?"
                authorities-by-username-query=
                    "SELECT TGSI_USER.Email1, TGSI_ROLE.Role_Name as authorities
                    FROM TGSI_USER, TGSI_ROLE
                    WHERE TGSI_USER.Email1 = ? AND TGSI_USER.ROLE_Id_Role=TGSI_ROLE.Id_Role"/>
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="accessDecisionManager" class="org.springframework.security.access.vote.AffirmativeBased">
        <beans:property name="decisionVoters">
            <beans:list>
                <beans:bean class="org.springframework.security.access.vote.RoleVoter"/>
                <beans:bean class="org.springframework.security.access.vote.AuthenticatedVoter"/>
            </beans:list>
        </beans:property>
    </beans:bean>

</beans:beans>